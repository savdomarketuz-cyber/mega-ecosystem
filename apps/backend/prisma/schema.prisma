// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Ma'lumotlar bazasi ulanishini sozlash
datasource db {
  provider = "postgresql" // Yoki "mysql", "sqlite"
  url      = env("DATABASE_URL")
}

// 2. Prisma Client generatori
generator client {
  provider = "prisma-client-js"
}

// 3. Foydalanuvchi roli uchun Enum
enum Role {
  CUSTOMER
  ADMIN
}

// 4. Buyurtma statusi uchun Enum
enum OrderStatus {
  NEW
  COLLECTING
  AWAITING_COURIER
  WITH_COURIER
  AT_PICKUP_POINT
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  RETURN_REQUESTED // <-- QO'SHILDI: Qaytarish so'rovi
  RETURN_COMPLETED // <-- QO'SHILDI: Qaytarish yakunlandi
}

// ============== MODELLAR =================

// ðŸ‘¤ Foydalanuvchi Modeli
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[] // 1-to-many: Bitta user -> ko'p orderlar
}

// ðŸ—‚ Kategoriya Modeli (Daraxt shaklida yangilangan)
model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // O'z-o'ziga bog'lanish uchun
  parentId  Int?
  parent    Category?  @relation("ParentChild", fields: [parentId], references: [id])
  children  Category[] @relation("ParentChild")

  products Product[]
}

// backend/prisma/schema.prisma ichidagi Product modeli

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  // ... (description, price, stock va hokazo eski maydonlar)

  // === Mahsulotga xos Yetkazib Berish Sozlamalari ===
  fulfillmentLeadTimeDays Int?      // Tayyorlash kuni (agar belgilanmasa, umumiy sozlamadan oladi)
  orderCutoffTime         String?   // Buyurtma qabul qilish vaqti (agar belgilanmasa, umumiy sozlamadan oladi)
  workingDays             Int[]     // Shu mahsulot uchun ish kunlari
  holidayDates            DateTime[]// Shu mahsulot uchun dam olish kunlari

  // ... (qolgan barcha maydonlar)
  brand       String
  countryOfOrigin String
  // ... va hokazo

  // -- QOLGAN BARCHA MAYDONLAR --
  description       String
  price             Float     
  oldPrice          Float?    
  stock             Int       @default(0) 
  marketSku         String    @unique 
  internalSku       String    @unique 
  imageUrl          String?   
  videoUrl          String?   
  barcode           String?   
  width             Int
  height            Int
  length            Int
  weight            Int
  shelfLifeMonths   Int?
  shelfLifeComment  String?
  ageRestriction    Int?      @default(0) 
  isAdult           Boolean   @default(false)
  color             String?
  size              String?
  attributes        Json?     
  categoryId        Int
  category          Category  @relation(fields: [categoryId], references: [id])
  orderItems        OrderItem[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
// ðŸ›’ Buyurtma Modeli
model Order {
  id         Int         @id @default(autoincrement())
  totalPrice Float
  status     OrderStatus @default(NEW)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  items OrderItem[] // Buyurtma ichidagi mahsulotlar ro'yxati
}

// ðŸ“‹ Buyurtmadagi mahsulotlar (Pivot jadval)
model OrderItem {
  id       Int @id @default(autoincrement())
  quantity Int
  price    Float // Sotilgan paytdagi narxni saqlash uchun

  orderId   Int
  order     Order @relation(fields: [orderId], references: [id])

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
// Umumiy do'kon sozlamalari uchun yangi model
model StoreSetting {
  id                      Int      @id @default(1) // Bu jadvalda har doim faqat bitta yozuv bo'ladi
  shipmentVolume          Int      @default(10) // Jo'natma hajmi
  fulfillmentLeadTimeDays Int      @default(1)  // Umumiy yetkazishga tayyorlash kuni
  orderCutoffTime         String   @default("09:00") // Umumiy buyurtma qabul qilish vaqti
  workingDays             Int[]    @default([1, 2, 3, 4, 5]) // Standart ish kunlari (Dushanba-Juma)
  holidayDates            DateTime[]
}